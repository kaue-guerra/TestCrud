@model TesteCrud.Models.FornecedorFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Fornecedor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Fornecedor.NomeFornecedor" class="control-label"></label>
                <input asp-for="Fornecedor.NomeFornecedor" class="form-control" />
                <span asp-validation-for="Fornecedor.NomeFornecedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fornecedor.Telefone" class="control-label"></label>
                <input asp-for="Fornecedor.Telefone" class="form-control" />
                <span asp-validation-for="Fornecedor.Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fornecedor.Documento" class="control-label"></label>
                <input asp-for="Fornecedor.Documento" class="form-control" />
                <span asp-validation-for="Fornecedor.Documento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fornecedor.Endereco" class="control-label"></label>
                <select asp-for="Fornecedor.Endereco" asp-items="@(new SelectList(Model.Enderecos, "Id", "Rua"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
