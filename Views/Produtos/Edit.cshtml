@model TesteCrud.Models.ViewModels.ProdutoFormViewModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar Produto</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Produto.Id" />
            <div class="form-group">
                <label asp-for="Produto.Nome" class="control-label"></label>
                <input asp-for="Produto.Nome" class="form-control" />
                <span asp-validation-for="Produto.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.CodBarras" class="control-label"></label>
                <input asp-for="Produto.CodBarras" class="form-control" />
                <span asp-validation-for="Produto.CodBarras" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.Quantidade" class="control-label"></label>
                <input asp-for="Produto.Quantidade" class="form-control" />
                <span asp-validation-for="Produto.Quantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.ValorCompra" class="control-label"></label>
                <input asp-for="Produto.ValorCompra" class="form-control" />
                <span asp-validation-for="Produto.ValorCompra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.ValorVenda" class="control-label"></label>
                <input asp-for="Produto.ValorVenda" class="form-control" />
                <span asp-validation-for="Produto.ValorVenda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.FornecedorId" class="control-label"></label>
                <select asp-for="Produto.FornecedorId" asp-items="@(new SelectList(Model.Fornecedores,"Id", "NomeFornecedor"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
